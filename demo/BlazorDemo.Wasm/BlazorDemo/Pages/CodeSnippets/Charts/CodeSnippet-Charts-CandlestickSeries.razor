<CodeSnippetTabbed DocLink="https://docs.devexpress.com/Blazor/DevExpress.Blazor.DxChartCandlestickSeries-3">
    <CodeSnippetTabPage Text="Razor">
        @(@"<DxChart Data=""@StockData""
         CssClass=""mw-1100"">
    <DxChartLegend Position=""RelativePosition.Outside"" />
    <DxChartCandlestickSeries ValueField=""@((BargainDataPoint i) => i.Price)""
                              ArgumentField=""@(i => new DateTime(i.DateTimeStamp.Year, i.DateTimeStamp.Month, i.DateTimeStamp.Day, i.DateTimeStamp.Hour, i.DateTimeStamp.Minute, 0) )""
                              Name=""Eco Supreme"" />
    <DxChartTooltip Enabled=""true"">
        @context.GetFinancialPoint().Render((financialPoint) =>
            @<div style=""margin: 0.75rem"">
                <div>Open: @($""{financialPoint.OpenValue: 0.0000}"")</div>
                <div>Close: @($""{financialPoint.CloseValue: 0.0000}"")</div>
                <div>High: @($""{financialPoint.HighValue: 0.0000}"")</div>
                <div>Low: @($""{financialPoint.LowValue: 0.0000}"")</div>
            </div>
            )
        </DxChartTooltip>
        </DxChart>")
    </CodeSnippetTabPage>
</CodeSnippetTabbed>
