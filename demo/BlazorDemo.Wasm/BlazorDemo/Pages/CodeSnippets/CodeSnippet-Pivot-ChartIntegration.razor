    <DxPivotGridField Field=""@nameof(SaleInfo.Country)"" Area=""PivotGridFieldArea.Row"" />
    <DxPivotGridField Field=""@nameof(SaleInfo.City)"" Area=""PivotGridFieldArea.Row"" />
