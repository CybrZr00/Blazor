@inject ISalesInfoDataProvider Sales

<DemoPageSectionComponent Id="Charts-PointSeries-Scatter">
    @inject ISalesInfoDataProvider Sales

    <DxChart Data="@ChartsData"
             Width="100%">
        <DxChartScatterSeries Name="2017"
                              T="SaleInfo"
                              TArgument="string"
                              TValue="int"
                              ArgumentField="si => si.City"
                              ValueField="si => si.Amount"
                              SummaryMethod="Enumerable.Sum"
                              Filter="si => si.Date.Year == 2017" />
        <DxChartScatterSeries Name="2018"
                              T="SaleInfo"
                              TArgument="string"
                              TValue="int"
                              ArgumentField="si => si.City"
                              ValueField="si => si.Amount"
                              SummaryMethod="Enumerable.Sum"
                              Filter="si => si.Date.Year == 2018" />
        <DxChartScatterSeries Name="2019"
                              T="SaleInfo"
                              TArgument="string"
                              TValue="int"
                              ArgumentField="si => si.City"
                              ValueField="si => si.Amount"
                              SummaryMethod="Enumerable.Sum"
                              Filter="si => si.Date.Year == 2019" />
    </DxChart>

    @code {
        IEnumerable<SaleInfo> ChartsData;

        protected override async Task OnInitializedAsync() {
            ChartsData = await Sales.GetSalesAsync();
        }
    }
</DemoPageSectionComponent>
