<DemoPageSectionComponent Id="Editors-DateEdit-ReadOnly" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        <DxFormLayout SizeMode="Params.SizeMode" CssClass="cw-320">
            <DxFormLayoutItem ColSpanMd="12" Caption="Read-Only">
                <DxDateEdit @bind-Date="@DateTimeValue" ReadOnly="true" />
            </DxFormLayoutItem>
            <DxFormLayoutItem ColSpanMd="12" Caption="Disabled" BeginRow="true">
                <DxDateEdit @bind-Date="@DateTimeValue" Enabled="false" />
            </DxFormLayoutItem>
        </DxFormLayout>
    </ChildContentWithParameters>

    @code {
        DateTime DateTimeValue { get; set; } = DateTime.Now;
    }
</DemoPageSectionComponent>
