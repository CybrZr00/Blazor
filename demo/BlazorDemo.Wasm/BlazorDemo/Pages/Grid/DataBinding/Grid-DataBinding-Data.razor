<DemoPageSectionComponent Id="Grid-DataBinding-Data" ShowHorizontalScrollBar="true">
    @inject WeatherForecastService ForecastService

    <DxGrid Data="@Data" CssClass="w-100">
        <Columns>
            <DxGridColumn FieldName="Date" DisplayFormat="D" />
            <DxGridColumn FieldName="Forecast" />
            <DxGridColumn FieldName="CloudCover" />
            <DxGridColumn FieldName="TemperatureC" Caption="@("Temp. (\x2103)")" Width="120px" />
            <DxGridColumn FieldName="TemperatureF" Caption="@("Temp. (\x2109)")" Width="120px" />
        </Columns>
    </DxGrid>

    @code {
        object Data { get; set; }

        protected override void OnInitialized() {
            Data = ForecastService.GetForecast().ToList();
        }
    }
</DemoPageSectionComponent>
