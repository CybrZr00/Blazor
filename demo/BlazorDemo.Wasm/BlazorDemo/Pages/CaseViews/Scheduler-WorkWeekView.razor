@using DevExpress.Blazor

<div class="demo-description">
    <h2><DemoNavLink Link="SchedulerViewTypes#WorkWeekView" />Work Week View</h2>
    <p>
        This module demonstrates how to configure the Work Week View (<a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.DxSchedulerWorkWeekView">DxSchedulerWorkWeekView</a>).
    </p>
</div>

<DxScheduler StartDate="@DateTime.Today"
             DataStorage="@DataStorage"
             CssClass="mw-1100">
    <DxSchedulerWorkWeekView ShowWorkTimeOnly="true"></DxSchedulerWorkWeekView>
</DxScheduler>

<CodeSnippet_Scheduler_WorkWeekView></CodeSnippet_Scheduler_WorkWeekView>

@code {
    DxSchedulerDataStorage DataStorage = new DxSchedulerDataStorage() {
        AppointmentsSource = AppointmentCollection.GetAppointments(),
        AppointmentMappings = new DxSchedulerAppointmentMappings() {
            Type = "AppointmentType",
            Start = "StartDate",
            End = "EndDate",
            Subject = "Caption",
            AllDay = "AllDay",
            Location = "Location",
            Description = "Description",
            LabelId = "Label",
            StatusId = "Status",
            RecurrenceInfo = "Recurrence"
        }
    };
}
