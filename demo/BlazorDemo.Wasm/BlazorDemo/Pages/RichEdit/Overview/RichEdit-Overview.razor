@page "/RichEdit"
@using System.IO;

<DemoPageSectionComponent Id="RichEdit-Overview" ShowCode="false">
    <DxRichEdit Id="richEdit" DocumentContent="@documentContent" CssClass="w-100 ch-720" />

    @code {
            byte[] documentContent;

        protected override async Task OnInitializedAsync() {
            documentContent = await File.ReadAllBytesAsync(Path.Combine(AppContext.BaseDirectory, "Data\\Documents\\Example.docx"));
            await base.OnInitializedAsync();
        }

    }
</DemoPageSectionComponent>
