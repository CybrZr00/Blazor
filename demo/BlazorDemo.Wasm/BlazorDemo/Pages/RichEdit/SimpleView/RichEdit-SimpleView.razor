@page "/RichEditSimpleView"
@using System.IO;

<DemoPageSectionComponent Id="RichEdit-SimpleView">
    <DxRichEdit DocumentContent="@documentContent" ViewType="ViewType.Simple" ActiveRibbonTabIndex="6" CssClass="w-100 ch-720" />

    @code {
        byte[] documentContent;

        protected override async Task OnInitializedAsync() {
            documentContent = await File.ReadAllBytesAsync(Path.Combine(AppContext.BaseDirectory, Path.Combine("Data", "Documents", "AlbertEinstein.docx")));
            await base.OnInitializedAsync();
        }
    }
</DemoPageSectionComponent>
