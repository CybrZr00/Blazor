@page "/Grid/PagingAndScrolling/VerticalScrolling"
@layout DataProviderAccessArea<INwindDataProvider>

<DemoPageSectionComponent Id="Grid-PagingAndScrolling-VerticalScrolling" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        @inject NwindDataService NwindDataService

        <DxGrid Data="@DataSource"
                PageSize="30"
                CssClass="ch-360"
                SizeMode="Params.SizeMode">
            <Columns>
                <DxGridDataColumn FieldName="ShipName" MinWidth="100" />
                <DxGridDataColumn FieldName="ShipCity" Width="15%" />
                <DxGridDataColumn FieldName="ShipPostalCode" Width="10%" />
                <DxGridDataColumn FieldName="ShipCountry" Width="15%" />
                <DxGridDataColumn FieldName="Freight" Width="10%" />
                <DxGridDataColumn FieldName="OrderDate" Width="10%" MinWidth="80" />
                <DxGridDataColumn FieldName="ShippedDate" Width="10%" MinWidth="80" />
            </Columns>
            <TotalSummary>
                <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="ShipName" />
            </TotalSummary>
        </DxGrid>
    </ChildContentWithParameters>

    @code {
        IEnumerable<Order> DataSource;

        protected override async Task OnInitializedAsync() {
            DataSource = await NwindDataService.GetOrdersAsync();
        }
    }
</DemoPageSectionComponent>
