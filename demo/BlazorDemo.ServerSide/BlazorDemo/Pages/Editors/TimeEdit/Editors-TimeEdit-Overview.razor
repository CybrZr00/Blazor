<DemoPageSectionComponent Id="Editors-TimeEdit-Overview" ShowSizeMode="true">
    <ChildContentWithParameters Context="Params">
        <DxTimeEdit @bind-Time="@TimeValue"
                    CssClass="cw-320"
                    SizeMode="Params.SizeMode" />
        <p class="demo-text cw-320 mt-2 text-muted">
            Time: <b>@TimeValue.ToString(@"hh\:mm\:ss")</b>
        </p>
    </ChildContentWithParameters>

    @code {
        TimeSpan TimeValue { get; set; } = DateTime.Now.TimeOfDay;
    }
</DemoPageSectionComponent>
